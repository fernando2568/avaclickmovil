<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:layout="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/home_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/feo">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:paddingRight="55dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/text_white_text_icons_100"
            android:textSize="25sp" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:gravity="bottom|center">

        <ImageView
            android:id="@+id/btnCrear"
            android:layout_width="100dp"
            android:layout_height="95dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/consultar1"
            android:contentDescription="@string/title_home"
            android:gravity="center"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/crear"
            android:textColor="@color/text_white_text_icons_100"
            android:textSize="30sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/new_report"
            android:textColor="@color/orange_menu"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="bottom|center">

        <ImageView
            android:id="@+id/btnConsultar"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:background="@drawable/consultar2"
            android:gravity="center"
            android:textAlignment="center"
            android:contentDescription="@string/title_home" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/consultar"
            android:textColor="@color/text_white_text_icons_100"
            android:textSize="30sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/reports_storage"
            android:textColor="@color/orange_menu"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>